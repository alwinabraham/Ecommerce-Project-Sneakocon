      <div class="container" style="width:30%;">
        <div class="row">
          <div class="col-md-12 mb-5 mb-md-0">
            <h2 class="h3 mb-3 text-black">User Signup</h2>
            <div class="p-3 p-lg-5 border">
              
        <form action="/user-signup" method="post">
              <div class="form-group row">
                <div class="col-md-12">
                  <label for="c_fname" class="text-black">First Name <span class="text-danger">*</span></label>
                  <input type="text" name="name" class="form-control form-control-lg" id="name" onkeyup="return validatename()" minlength="5" autocomplete="off" required/>
                  <p style="color:red;" id="namedemo"></p>
                </div>
                <br>
                 <div class="col-md-12">
                  <label for="c_fname" class="text-black">Email<span class="text-danger">*</span></label>
                  <input type="email" name="email" class="form-control" id="email" onkeyup="return validateemail()" minlength="5" autocomplete="off" required/>
                  <p style="color:red;" id="emaildemo"></p>
                </div>
                <br>
                 <div class="col-md-12">
                  <label for="c_fname" class="text-black">Phone <span class="text-danger">*</span></label>
                  <input type="phone" name="phone" class="form-control form-control-lg" id="phone" minlength="10" onkeyup="return validatephone()" autocomplete="off" required//>
                  <p style="color:red;" id="phonedemo"></p>
                </div>
                <br>
                 <div class="col-md-12">
                  <label for="c_fname" class="text-black">Password<span class="text-danger">*</span></label>
                  <input type="password" name="password" class="form-control form-control-lg" id="pswd" onkeyup="return validatePassword()" minlength="5" autocomplete="off" required>
                  <p style="color:red;" id="pswddemo"></p>
                </div>
                <br>
                <div class="col-md-12" style="margin-bottom: 30px;">
                  <label for="c_lname" class="text-black">Re Enter Password <span class="text-danger">*</span></label>
                  <input type="password" name="reEnterPassword" class="form-control form-control-lg" minlength="5" autocomplete="off" required/>
                </div>
                <br>
                  <input type="text" name="status" value="block" style="display: none;"/>
                <br>
                <div class="col-md-12">
                  <div class="form-group row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <button type="submit"  class="btn btn-primary" style="width: 100%;">Confirm</button>
                      </div>
                    </form>
                    </div>
                  </div>
                </div>
            </div>
            </div>
        </div>
      </div>
    </div>





