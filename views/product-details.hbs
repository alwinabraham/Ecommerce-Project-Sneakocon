  <!DOCTYPE html>
<html lang="en">
  <head>
    <title>Shoppers &mdash; Colorlib e-Commerce Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700"> 
    <link rel="stylesheet" href="/fonts/icomoon/style.css">

    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/magnific-popup.css">
    <link rel="stylesheet" href="/stylesheets/jquery-ui.css">
    <link rel="stylesheet" href="/stylesheets/owl.carousel.min.css">
    <link rel="stylesheet" href="/stylesheets/owl.theme.default.min.css">


    <link rel="stylesheet" href="/stylesheets/aos.css">

    <link rel="stylesheet" href="/stylesheets/style.css">
    
  </head>
  <body>
  
  <div class="site-wrap">
    <header class="site-navbar" role="banner">
      <div class="site-navbar-top">
        <div class="container">
          <div class="row align-items-center">

            <div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
              <form action="" class="site-block-top-search">
                <span class="icon icon-search2"></span>
                <input type="text" class="form-control border-0" placeholder="Search">
              </form>
            </div>

            <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
              <div class="site-logo">
                <a href="/" class="js-logo-clone">Shoppers</a>
              </div>
            </div>

            <div class="col-6 col-md-4 order-3 order-md-3 text-right">
              <div class="site-top-icons">
                <ul>
                   {{#if check}}
                  <li><a href="users/logout">{{logout}}</a></li>
                  {{/if}}
                  <li><a href="/user-profile"><span class="icon icon-person"></span></a></li>
                  <li><a href="/wishlist-list"><span class="icon icon-heart-o"></span></a></li>
                  <li>
                    <a href="/cart-list-page" class="site-cart">
                      <span class="icon icon-shopping_cart"></span>
                      <span class="count">{{count}}</span>
                    </a>
                  </li> 
                  <li class="d-inline-block d-md-none ml-md-0"><a href="#" class="site-menu-toggle js-menu-toggle"><span class="icon-menu"></span></a></li>
                  <li>{{title}}</li>
                </ul>
              </div> 
            </div>
          </div>
        </div>
      </div> 
    </header>

    <div class="bg-light py-3">
      <div class="container">
        {{#each product}}
        <div class="row">
          <div class="col-md-12 mb-0"><a href="/">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black" style="color: gray;">{{this.productName}}</strong></div>
        </div>
      </div>
    </div>  
    <div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">

            <img id="img_01" src="/uploads/{{image.[0]}}" style="width: 500px" data-zoom-image="/uploads/{{image.[0]}}"/>
            
            <div id="gal1">
                <a href="#" data-image="/uploads/{{image.[0]}}" data-zoom-image="/uploads/{{image.[0]}}">
                    <img class="img_01" src="/uploads/{{image.[0]}}" style="height:86px"/>
                </a>
                <a href="#" data-image="/uploads/{{image.[1]}}" data-zoom-image="/uploads/{{image.[1]}}">
                    <img class="img_01" src="/uploads/{{image.[1]}}" style="height:86px"/>
                </a>
                <a href="#" data-image="/uploads/{{image.[2]}}" data-zoom-image="/uploads/{{image.[2]}}">
                    <img class="img_01" src="/uploads/{{image.[2]}}" style="height:86px"/>
                </a>
                <a href="#" data-image="/uploads/{{image.[3]}}" data-zoom-image="/uploads/{{image.[3]}}">
                    <img class="img_01" src="/uploads/{{image.[3]}}" style="height:86px"/>
                </a>
            </div>
          </div>
          <div class="col-md-6">
            <h2 class="text-black">{{this.productName}}</h2>
            <h4 class="text-black">{{this.brand}}</h4>
            <p>{{this.description}}</p>
            <span><strong style="text-decoration: line-through; color:gray">${{this.price}}</strong></span>
            <p class="text-primary font-weight-bold h3">${{this.DiscountedTotal}}</p>
            <p id="stockChecker" class="h5" style="color: red;">{{this.stock}}</p>
            <div class="mb-1 d-flex">
              <label for="option-6" class="d-flex mr-3 mb-3">
                <span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-6" name="shop-sizes"></span> <span class="d-inline-block text-black">6</span>
              </label>
              <label for="option-7" class="d-flex mr-3 mb-3">
                <span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-7" name="shop-sizes"></span> <span class="d-inline-block text-black">7</span>
              </label>
              <label for="option-8" class="d-flex mr-3 mb-3">
                <span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-8" name="shop-sizes"></span> <span class="d-inline-block text-black">8</span>
              </label>
              <label for="option-9" class="d-flex mr-3 mb-3">
                <span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-9" name="shop-sizes"></span> <span class="d-inline-block text-black">9</span>
              </label>
              <label for="option-10" class="d-flex mr-3 mb-3">
                <span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-10" name="shop-sizes"></span> <span class="d-inline-block text-black">10</span>
              </label>
              <label for="option-11" class="d-flex mr-3 mb-3">
                <span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-11" name="shop-sizes"></span> <span class="d-inline-block text-black">11</span>
              </label>
              <label for="option-12" class="d-flex mr-3 mb-3">
                <span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-12" name="shop-sizes"></span> <span class="d-inline-block text-black">12</span>
              </label>
            </div>
            <span>
                {{!-- <a href="/cart-add" id="displayCart" class="buy-now btn btn-sm btn-primary">Add To Cart</a><a href="/wishlist-add" style="padding-left: 5%;"><span class="icon icon-heart-o"></span></a> --}}
                <button id="displayCart" class="buy-now btn btn-sm btn-primary" onclick="return addToCartButton()">Add To Cart</button>
                <button id="displayCart" class="buy-now btn btn-sm btn-primary" onclick="return addToWishButton()"><span class="icon icon-heart-o"></span></button>
                {{!-- <a href="/wishlist-add" style="padding-left: 5%;"></span></a> --}}
            </span>
            {{/each}}
          </div>
        </div>
      </div>
    </div>


    <div class="site-section block-3 site-blocks-2 bg-light">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-7 site-section-heading text-center pt-4">
            <h2>Featured Products</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="nonloop-block-3 owl-carousel">
              {{#each feature}}
              <div class="item">
                <div class="block-4 text-center">
                  <figure class="block-4-image">
                    <a href="/product-details/{{this._id}}"><img src="/uploads/{{image.[0]}}" alt="" class="img-fluid"></a>
                  </figure>
                  <div class="block-4-text p-4">
                    <h3>{{this.productName}}</h3>
                    <p class="mb-0">{{this.brand}}</p>
                    <span class="text-primary font-weight-bold">${{this.price}}</span>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer class="site-footer border-top">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 mb-5 mb-lg-0">
            <div class="row">
              <div class="col-md-12">
                <h3 class="footer-heading mb-4">Navigations</h3>
              </div>
              <div class="col-md-6 col-lg-4">
                <ul class="list-unstyled">
                  <li><a href="#">Sell online</a></li>
                  <li><a href="#">Features</a></li>
                  <li><a href="#">Shopping cart</a></li>
                  <li><a href="#">Store builder</a></li>
                </ul>
              </div>
              <div class="col-md-6 col-lg-4">
                <ul class="list-unstyled">
                  <li><a href="#">Mobile commerce</a></li>
                  <li><a href="#">Dropshipping</a></li>
                  <li><a href="#">Website development</a></li>
                </ul>
              </div>
              <div class="col-md-6 col-lg-4">
                <ul class="list-unstyled">
                  <li><a href="#">Point of sale</a></li>
                  <li><a href="#">Hardware</a></li>
                  <li><a href="#">Software</a></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
            <h3 class="footer-heading mb-4">Promo</h3>
            <a href="#" class="block-6">
              <img src="/images/hero_1.jpg" alt="Image placeholder" class="img-fluid rounded mb-4">
              <h3 class="font-weight-light  mb-0">Finding Your Perfect Shoes</h3>
              <p>Promo from  nuary 15 &mdash; 25, 2019</p>
            </a>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="block-5 mb-5">
              <h3 class="footer-heading mb-4">Contact Info</h3>
              <ul class="list-unstyled">
                <li class="address">203 Fake St. Mountain View, San Francisco, California, USA</li>
                <li class="phone"><a href="tel://23923929210">+2 392 3929 210</a></li>
                <li class="email">emailaddress@domain.com</li>
              </ul>
            </div>

            <div class="block-7">
              <form>
                <label for="email_subscribe" class="footer-heading">Subscribe</label>
                <div class="form-group">
                  <input type="text" class="form-control py-4" id="email_subscribe" placeholder="Email">
                  <input type="submit" class="btn btn-sm btn-primary" value="Send">
                </div>
              </form>
            </div>  
          </div>
        </div>
        <div class="row pt-5 mt-5 text-center">
          <div class="col-md-12">
            <p>
            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
            Copyright &copy;<script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script><script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank" class="text-primary">Colorlib</a>
            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
            </p>
          </div>
          
        </div>
      </div>
    </footer>
  </div>

  <script src="/javascripts/jquery-3.3.1.min.js"></script>
  <script src="/javascripts/jquery-ui.js"></script>
  <script src="/javascripts/popper.min.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>
  <script src="/javascripts/owl.carousel.min.js"></script>
  <script src="/javascripts/jquery.magnific-popup.min.js"></script>
  <script src="/javascripts/aos.js"></script>
  <script src="/javascripts/jquery.ez-plus.js"></script>
<script type="text/javascript" src="https://cdn.rawgit.com/igorlino/elevatezoom-plus/1.1.6/src/jquery.ez-plus.js"></script>
<script>
    let newstock = $('#stockChecker').html()
    console.log(newstock)
    if(newstock == 0){
      document.getElementById('stockChecker').innerText="AVAILABLE SOON"
      document.getElementById("stockChecker").style.color = "red";
      document.getElementById("displayCart").style.display = "none"
    }else{
      document.getElementById("stockChecker").style.display = "none";
    }
</script>
<script>
$('#img_01').ezPlus({
    constrainType: 'height', constrainSize: 274, zoomType: 'lens',
    containLensZoom: true, gallery: 'gallery_01', cursor: 'pointer', galleryActiveClass: 'active'
});

//pass the images to Fancybox
$('.img_01').bind('click', function (e) {
    var ez = $('#img_01').data('ezPlus');
    $.fancyboxPlus(ez.getGalleryList());
    return false;
});

</script>

  <script src="/javascripts/main.js"></script>
    
  </body>
  <script>
    function addToCartButton(){
      $.ajax({
          type:'get',
          url: '/cart-add',
          dataType: 'json',
          success:(responce)=>{
            if(responce){
              location.reload()
            }else{
              location.href = '/cart-login'
            }
          }
        })
    }
  </script>

<script>
  function addToWishButton(){
    $.ajax({
        type:'get',
        url: '/wishlist-add',
        dataType: 'json',
        success:(responce)=>{
          if(responce){
            location.reload()
          }else{
            location.href = '/wishlist-login'
          }
        }
      })
  }
</script>
</html>




