  <body>
  <div class="site-wrap">
    <header class="site-navbar" role="banner">
      <div class="site-navbar-top">
        <div class="container">
          <div class="row align-items-center">

            <div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
              <form action="" class="site-block-top-search">
                <span class="icon icon-search2"></span>
                <input type="text" class="form-control border-0" placeholder="Search">
              </form>
            </div>

            <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
              <div class="site-logo">
                <a href="/" class="js-logo-clone">Shoppers</a>
              </div>
            </div>

            <div class="col-6 col-md-4 order-3 order-md-3 text-right">
              <div class="site-top-icons">
                <ul>
                   {{#if check}}
                  <li><a href="users/logout">{{logout}}</a></li>
                  {{/if}}
                  <li><a href="/user-profile"><span class="icon icon-person"></span></a></li>
                  <li><a href="#"><span class="icon icon-heart-o"></span></a></li>
                  <li>
                    <a href="/cart-list-page" class="site-cart">
                      <span class="icon icon-shopping_cart"></span>
                      <span class="count">{{count}}</span>
                    </a>
                  </li> 
                  <li class="d-inline-block d-md-none ml-md-0"><a href="#" class="site-menu-toggle js-menu-toggle"><span class="icon-menu"></span></a></li>
                  <li>{{title}}</li>
                </ul>
              </div> 
            </div>
          </div>
        </div>
      </div> 
    </header>

    <div class="bg-light py-3">
      <div class="container">
        <div class="row">
          <div class="col-md-12 mb-0"><a href="/">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Wishlist</strong></div>
        </div>
      </div>
    </div>

    <div class="site-section">
      <div class="container">
        <div class="row mb-5">
            <div class="site-blocks-table">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th class="product-thumbnail">Image</th>
                    <th class="product-name">Product</th>
                    <th class="product-price">Price</th>
                    <th class="product-price">StockStatus</th>
                    <th class="product-addToCart">To Cart</th>
                    <th class="product-remove">Remove</th>
                  </tr>
                </thead>
                <tbody>
                    {{#each products}}
                  <tr id="tableRemover{{this.products._id}}">
                    <td class="product-thumbnail"> <img src="/uploads/{{this.products.image.[0]}}"  alt="" style="width: 100%px; height: 100px"class="img-fluid"></td>
                    <td class="product-name"><h2 class="h5 text-black">{{this.products.productName}}</h2></td>
                    <td>$<span>{{this.products.price}}</span> </td>
                    {{#if this.products.stock}}
                    <td><p style="color: Green;">Available</p></td>
                    {{else}}
                    <td><p style="color: Red;">Out Of Stock</p></td>
                    {{/if}}
                    {{#if this.products.stock}}
                    <td><button class="btn btn-primary" onclick="return wishToCart('{{this._id}}','{{this.products._id}}')">Add To Cart</button></td>
                    {{else}}
                    <td><p style="color: Red;"></p></td>
                    {{/if}}
                    <td><button class="btn btn-primary" onclick="return deleteWish('{{this._id}}','{{this.products._id}}')">X</button></td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="row mb-5">
              <div class="col-md-6">
                <a href="/" class="btn btn-outline-primary btn-sm btn-block">Continue Shopping</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

