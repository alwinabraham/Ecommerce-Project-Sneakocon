          </div>
          
        </div>
      </div>
    </footer>
  </div>

  <script src="javascripts/jquery-3.3.1.min.js"></script>
  <script src="javascripts/jquery-ui.js"></script>
  <script src="javascripts/popper.min.js"></script>
  <script src="javascripts/bootstrap.min.js"></script>
  <script src="javascripts/owl.carousel.min.js"></script>
  <script src="javascripts/jquery.magnific-popup.min.js"></script>
  <script src="javascripts/aos.js"></script>

  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
  <script src="javascripts/main.js"></script>
  <script>
    let newstock = $('#stock').html()
    console.log(newstock)
    if(newstock == 0){
      document.getElementById("stock"+proId).innerText="OUT OF STOCK"
      document.getElementById("stock"+proId).style.color = "red";

    }else{
      document.getElementById("stock"+proId).innerText="AVAILABLE"
      document.getElementById("stock"+proId).style.color = "green";
    }
  </script>
   <script>
      function deleteWish(wishId,proId){
        console.log(wishId,proId)
        $.ajax({
          type:'delete',
          url: '/delete-wish',
          dataType: 'json',
          data: {
            wish:wishId,
            product:proId
          },
          success:(responce)=>{
              document.getElementById("tableRemover"+proId).style.display = "none";
          }
        })
      }
    </script>
    <script>
        function wishToCart(wishId,proId){

          $.ajax({
            type:'post',
            url: '/wishToCart',
            dataType: 'json',
            data: {
              wish:wishId,
              product:proId
            },
            success:(responce)=>{
            if(responce == null){
              location.reload()
            }else{
              document.getElementById("tableRemover"+proId).style.display = "none";
            }
            }      
          })
        }
      </script>
  </body>
</html>
