  <body>
  
  <div class="site-wrap">
    <header class="site-navbar" role="banner">
      <div class="site-navbar-top">
        <div class="container">
          <div class="row align-items-center">

            <div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
              <form action="" class="site-block-top-search">
                <span class="icon icon-search2"></span>
                <input type="text" class="form-control border-0" placeholder="Search">
              </form>
            </div>

            <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
              <div class="site-logo">
                <a href="/" class="js-logo-clone">Shoppers</a>
              </div>
            </div>

            <div class="col-6 col-md-4 order-3 order-md-3 text-right">
              <div class="site-top-icons">
                <ul>
                   {{#if check}}
                  <li><a href="users/logout">{{logout}}</a></li>
                  {{/if}}
                  <li><a href="/user-profile"><span class="icon icon-person"></span></a></li>
                  <li><a href="/wishlist-list"><span class="icon icon-heart-o"></span></a></li>
                  <li>
                    <a href="/cart-list-page" class="site-cart">
                      <span class="icon icon-shopping_cart"></span>
                      <span class="count">{{count}}</span>
                    </a>
                  </li> 
                  <li class="d-inline-block d-md-none ml-md-0"><a href="#" class="site-menu-toggle js-menu-toggle"><span class="icon-menu"></span></a></li>
                  <li>{{title}}</li>
                </ul>
              </div> 
            </div>
          </div>
        </div>
      </div> 
    </header>

    <div class="bg-light py-3">
      <div class="container">
        <div class="row">
          <div class="col-md-12 mb-0"><a href="/">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black"><a href="/cart-list">Cart</a></strong> <span class="mx-2 mb-0">/</span> <strong class="text-black">Order List</strong></div>
        </div>
      </div>
    </div>

    <div class="site-section">
      <div class="container">
        <div class="row mb-5">
            <div class="site-blocks-table">
              <table class="table table-bordered" id="myTable">
                <thead>
                  <tr>
                    <th>Index</th>
                    <th>Address</th>
                    <th>total</th>
                    <th>Payment Method</th>
                    <th>Order Status</th>
                    <th>Product Details</th>
                  </tr>
                </thead>
                <tbody>
                    {{#each data}}
                  <tr onload="return addOneIndex({{this._id}})">
                    <td id="tableIndex{{this._id}}">{{@index}}</td>
                    <td>{{this.address.address}}</td>
                    <td>${{this.products.0.sumTotal}}</td>
                    <td>{{this.paymentmethod}}</td>
                    <td>{{this.deliveryStatus}}</td>
                    <td><a class="btn btn-primary" href="/user-products-details-page/{{this._id}}">Details</a></td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
        </div>
    <footer class="site-footer border-top">
