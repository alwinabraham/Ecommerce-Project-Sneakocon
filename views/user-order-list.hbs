    function addOneIndex(Id){
      let tableIndex = $('#tableIndex' + Id).html()
      console.log(tableIndex)
      index = tableIndex + 1
      console.log(index)
      $("#tableIndex" + Id).html(index)
    }
  </script>
     <script>
      function cancelSingleOrder(orderId,userId,proId){

        $.ajax({
          type:'post',
          url: '/cancel-single-order',
          dataType: 'json',
          data: {
            order:orderId,
            user:userId,
            product:proId
          },
          success:(responce)=>{
            console.log(responce)
              location.reload()            
          }
        })
      }
    </script>
    <script>
      function productDetails(orderId,userId,proId){

        $.ajax({
          type:'post',
          url: '/show-product-details',
          dataType: 'json',
          data: {
            order:orderId,
            user:userId,
            product:proId
          },
          success:(responce)=>{
            console.log(responce)
              location.reload()            
          }
        })
      }
    </script>

    
