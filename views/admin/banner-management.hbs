                <div class="col-9">
                    <form action="/banner-management" enctype="multipart/form-data" method="post">
                    <div class="content-header">
                        <h2 class="content-title">Add New Banner</h2>
                        <div>
                            <button type="submit" class="btn btn-md rounded font-sm hover-up">Publish</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Description</label>
                                    <input type="text" name="description" placeholder="Type here" class="form-control" id="description" required>
                                </div>
                                </div>
                        </div>
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                <img src="assets/imgs/theme/upload.svg" alt="">
                                <input name="image" type="file" multiple required />
                            </div>
                        </div>
                        </form>
                    </div> <!-- card end// -->
                </div>
            </div>


            
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="myTable">
                            <thead>
                                <tr>
                                    <th scope="col">Banner Image</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td><img src="/uploads/{{image.[0]}}" class="img-sm img-thumbnail" alt="Item"></td>
                                    <td><p class="mb-0">{{this.description}}</p></td>
                                    <td><a href ='/delete-banner/{{this._id}}' onclick="return confirm('Are you want to delete?')" class="btn btn-sm font-sm btn-light rounded">Delete</a></td>
                                </tr>
