    <script>
      function deleteCoupon(couponId){

        $.ajax({
          type:'delete',
          url: '/delete-coupon',
          dataType: 'json',
          data: {
            couponid:couponId
          },
          success:(responce)=>{
             document.getElementById("counter"+couponId).style.display = "none";
          }
        })
      }
