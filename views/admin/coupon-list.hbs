        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Coupon List</h2>
                </div>
                <div>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    Create new Coupon
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="staticBackdropLabel">Add coupon</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="/add-coupon" method="post">
                                        <label class="form-check mb-4">
                                            <label for="product_name" class="form-label">Coupon Name</label>
                                            <input type="text" name="couponName" placeholder="Type here" class="form-control" id="product_name" autocomplete="off" required>
                                        </label>
                                        <label class="form-check mb-4">
                                            <label for="product_name" class="form-label">Deduction</label>
                                            <input type="number" name="deduction" placeholder="Type Deduction (%)" class="form-control" id="product_name" autocomplete="off" required>
                                        </label>
                                        <label class="form-check mb-4">
                                            <label for="product_name" class="form-label">ExpiryData</label>
                                            <input type="text" class="form-control" name="expiryData" id="datepicker" placeholder="Type here" autocomplete="off" required>
                                        </label>
                                        <label class="form-check mb-4">
                                            <label for="product_name" class="form-label">Limit</label>
                                            <input type="text" class="form-control" name="limit" id="product_limit" placeholder="Type here" autocomplete="off" required>
                                        </label>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Add Coupon</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="myTable">
                            <thead>
                                <tr>
                                    <th scope="col">Coupon ID</th>
                                    <th scope="col">Coupon Name</th>
                                    <th scope="col">Deduction</th>
                                    <th scope="col">Expiry Date</th>
                                    <th scope="col">Limit</th>
                                    {{!-- <th scope="col">Edit Coupon</th> --}}
                                    <th scope="col">Delete Coupon</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each product}}
                                <tr id="counter{{this._id}}">
                                    <td><b><span>{{this._id}}</span></b></td>
                                    <td><span>{{this.couponName}}</span></td>
                                    <td><span>{{this.deduction}}%</span></td>
                                    <td> <span>{{this.expiryData}}</span></td>
                                    <td> <span>{{this.limit}}</span></td>
                                    {{!-- <td><a href='/editCoupon/{{this._id}}' class="btn btn-sm font-sm rounded btn-brand"><i class="material-icons md-edit"></i> Edit</a></td> --}}
                                    <td>
                                        <button class="btn btn-sm font-sm btn-light rounded" onclick="return deleteCoupon('{{this._id}}')">Delete</button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div> <!-- table-responsive //end -->
